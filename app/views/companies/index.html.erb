<p style="color: green"><%= notice %></p>

<h1>Companies</h1>

<table class = "table" id="companies_table">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Ticker Symbol</th>
      <th>Animal Testing</th>
      <th>Nuclear Weapons</th>
      <th>Coal Power</th>
      <th>Rainforest Destruction</th>
    </tr>
  </thead>
  <% @companies.each do |company| %>
    <%= render company %>
  <% end %>
</table>

<%= link_to "New company", new_company_path %>
